[init]
	defaultBranch = main
[pull]
	rebase = false
[push]
	autoSetupRemote = true

# Create directory specific gitconfig files
[includeIf "gitdir:~/dev/<redacted>/"]
	path = ~/dev/<redacted>/.gitconfig

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true