{
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "git.autofetch": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "workbench.colorTheme": "Bearded Theme Solarized Light",
  "workbench.iconTheme": "bearded-icons",
  // "editor.fontFamily": "'FiraCode Nerd Font', 'Cartograph CF', Menlo, Monaco, 'Courier New', monospace"
  "editor.fontFamily": "'Monaspace Neon', 'Cartograph CF', monospace",
  "editor.fontLigatures": "'calt', 'liga', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08', 'ss09'",
  "files.autoSave": "onFocusChange",
  "git.confirmSync": false,
  "workbench.remoteIndicator.showExtensionRecommendations": false,
  // Vim
  "vim.leader": ",",
  "vim.highlightedyank.enable": true,
  "vim.smartcase": true,
  "vim.ignorecase": true,
  "vim.useSystemClipboard": true,
  "vim.easymotion": true,
  "vim.hlsearch": true,
  "vim.normalModeKeyBindings": [
    {
      "before": [
        "<C-j>"
      ],
      "after": [
        "5",
        "j"
      ]
    },
    {
      "before": [
        "<C-k>"
      ],
      "after": [
        "5",
        "k"
      ]
    },
    {
      "before": [
        "<Esc><Esc>"
      ],
      "commands": [
        {
          "command": ":noh"
        }
      ]
    },
    {
      "before": [
        "<leader>",
        "r"
      ],
      "commands": [
        {
          "command": "editor.action.rename"
        }
      ]
    },
    {
      "before": [
        "<space>"
      ],
      "after": [
        "/"
      ]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": [
        "<C-j>"
      ],
      "after": [
        "5",
        "j"
      ]
    },
    {
      "before": [
        "<C-k>"
      ],
      "after": [
        "5",
        "k"
      ]
    }
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": [
        "j",
        "j"
      ],
      "after": [
        "<Esc>"
      ]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<C-l>"
      ],
      "commands": [
        ":nohl"
      ]
    }
  ],
  "github.copilot.chat.edits.codesearch.enabled": true,
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.chat.editor.temporalContext.enabled": true,
  "workbench.activityBar.location": "top",
  "editor.minimap.enabled": false,
  "typescript.tsserver.log": "verbose",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "github.copilot.chat.edits.temporalContext.enabled": true
}